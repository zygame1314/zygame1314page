{
    "version": 2,
    "builds": [
        {
            "src": "**/*.{html,htm,css,js,jsx,ts,tsx,jpg,jpeg,png,gif,svg,ico,webp,mp3,mp4,wav,pdf,txt,json,xml,woff,woff2,ttf,eot,cur}",
            "use": "@vercel/static"
        },
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.js",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
                "Access-Control-Allow-Headers": "Content-Type"
            }
        },
        {
            "src": "/article/(.*)",
            "has": [
                {
                    "type": "header",
                    "key": "Referer",
                    "value": "^$"
                }
            ],
            "status": 307,
            "headers": {
                "Location": "/"
            }
        },
        {
            "src": "/article/(.*)",
            "dest": "/"
        }
    ]
}